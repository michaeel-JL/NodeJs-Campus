<% include partials/_header %>
<style>
  div.row{
   margin-right: 0px;
}
div.container-fluid{
   padding-right: 0px;
}

</style>
  <center>
    <h1>Alumnos</h1>
  </center>

  <br>
  <div class="container-fluid">

    <div class="row">
      <!--FORM-->
      <div class="col-md-3">
        <div class="card">
          <div class="card-body">
            <h5>Añadir Alumno</h5>

            <form action="/verAlumnos/add" method="post">
              <div class="form-group">
                <input class="form-control" type="text" name="email" placeholder="Email">
              </div>
              <div class="form-group">
                <input class="form-control" type="text" name="password" placeholder="Password">
              </div>
              <div class="form-group">
                <input class="form-control" type="hidden" name="rol" value="Alumno">
              </div>

              <button class="btn btn-primary" type="submit">
                Añadir
              </button>
            </form>
          </div>
        </div>
      </div>

      <!-- LIST -->


      <div class="col-md-9">
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <th>Email</th>
              <th>Password</th>
              <th>Rol</th>
              <th>Operaciones</th>

            </tr>
          </thead>

          <% for(var i=0; i < users.length; i++) { %>
            <tr>
              <% if(users[i].rol=="Alumno" ) { %>
                <td><strong>
                    <%= users[i].email %>
                  </strong></td>
                <td>
                  <%= users[i].password %>
                </td>
                <td>
                  <%= users[i].rol %>
                </td>
                <td>
                  <a href="/verAlumnos/delete/<%= users[i]._id %>" class="btn btn-danger">
                    Delete
                  </a>
                  <a href="/verAlumnos/edit/<%= users[i]._id %>" class="btn btn-info">
                    Edit
                  </a>
                </td>
            </tr>
            <% } %>
              <% } %>
        </table>
      </div>
    </div>



  </div>
  <% include partials/_footer %>