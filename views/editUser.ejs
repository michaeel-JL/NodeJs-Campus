<% include partials/_header %>

<div class="container">
  <div class="row">

    
    <!--FORM-->
    <% if(user.rol=="Alumno" ) { %>
    <div class="col-md-5 offset-md-3">
      <div class="card">
        <div class="card-body">
          <form action="/verAlumnos/edit/<%= user._id %>" method="post">
            <h5>Usuario</h5>
            <div class="form-group">
              <input class="form-control" type="text" name="email" placeholder="email" value="<%= user.email %>">
            </div>
            <h5>Password</h5>
            <div class="form-group">
              <textarea class="form-control" name="password" cols="80"
                placeholder="password"
                ><%= user.password %></textarea>
            </div>
            <h5>Rol</h5>
            <input type="radio" name="rol" id="rol" value="Administrador">Administrador
            <input type="radio" name="rol" id="rol" value="Profesor">Profesor
            <input type="radio" name="rol" id="rol" value="Alumno">Alumno          
            <br><br>
            <button class="btn btn-primary" type="submit">
              Update 
            </button>
          </form>
        </div>
      </div>
    </div>
    <% } %>
    <!--FORM-->
    <% if(user.rol=="Profesor" ) { %>
    <div class="col-md-5 offset-md-3">
      <div class="card">
        <div class="card-body">
          <form action="/verProfesores/edit/<%= user._id %>" method="post">
            <h5>Usuario</h5>
            <div class="form-group">
              <input class="form-control" type="text" name="email" placeholder="email" value="<%= user.email %>">
            </div>
            <h5>Password</h5>
            <div class="form-group">
              <textarea class="form-control" name="password" cols="80"
                placeholder="password"
                ><%= user.password %></textarea>
            </div>
            <h5>Rol</h5>
            <input type="radio" name="rol" id="rol" value="Administrador">Administrador
            <input type="radio" name="rol" id="rol" value="Profesor">Profesor
            <input type="radio" name="rol" id="rol" value="Alumno">Alumno          
            <br><br>
            <button class="btn btn-primary" type="submit">
              Update 
            </button>
          </form>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>
<% include partials/_footer%>