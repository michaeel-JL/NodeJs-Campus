<% include partials/_header %>
<center><h1>Profesores</h1>
</center>
<br>
<div class="container">

    <div class="row">
      <!--FORM-->
      
    <div class="col-md-3">
      <center>
      <div class="card">
        <div class="card-body">

          <h5>Añadir Profesor</h5>

          <form action="/signupProfesores" method="POST">
            <div class="form-group">
              <input class="form-control" type="text" name="email" placeholder="Email">
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="password" placeholder="Password">
            </div>
            <div class="form-group">
              <input class="form-control" type="hidden" name="role" id="role" value="Profesor">
            </div>
          
            <button class="btn btn-primary" type="submit">
              Añadir
            </button>
          </form>


        </div>
      </div>
    </center>
    </div>


    <!-- LIST -->
    <div class="col-md-8">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <h1></h1>
            <th>Usuario</th>
            <th>Email</th>
            <th>Password</th>
            <th>Rol
            </th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i < users.length; i++) { %>
            <tr>
              <% if(users[i].rol == "Profesor") { %>
              <td><%= i + 1%></td>
              <td><strong><%= users[i].email %></strong></td>
              <td><%= users[i].password %></td>
              <td><%= users[i].rol %></td>
              <td><a href="/verProfesores/delete/<%= users[i]._id %>"
                class="btn btn-danger">
                Delete
              </a>

              <a href="/verProfesores/edit/<%= users[i]._id %>" class="btn btn-info">
                Edit
              </a>
              </td>
            </tr>
            <% } %>
          <% } %>
        </tbody>

      </table>
    </div>
  </div>

</div>
<% include partials/_footer %>