<% include partials/_header %>


  <div class="container" style="padding-left: 0;">
    <div class="row">

      <div class="col-md-12">

        <div class="card">
          <div class="card-body">
            <h5>AÃ±adir Curso</h5>
            <form action="/courses/add" method="post">
              <div class="form-group">
                <input class="form-control" type="text" name="name" placeholder="Name">
              </div>
              <div class="form-group">
                <input type="radio" name="curso" id="curso" value="Grado"> Grado
                <br>
                <input type="radio" name="curso" id="curso" value="Master"> Master
                <br>
                <input type="radio" name="curso" id="curso" value="Doctorado"> Doctorado
              </div>
              <button class="btn btn-primary" type="submit">
                Add
              </button>
            </form>
          </div>
        </div>


        <table class="table">
          <thead>
            <tr>
              <th scope="col">Tipo</th>
              <th scope="col">Nombre</th>
              <th scope="col">Acciones</th>
            </tr>
          </thead>

          <% for(var i=0; i < courses.length; i++) { %>
            <tbody>
              <tr>
                <td>
                    <%= courses[i].type %>
                  </td>
                <td>
                  <%= courses[i].name %>
                </td>
                <td>
                  <a href="/courses/delete/<%= courses[i]._id %> " class="btn btn-danger">
                    Delete
                  </a>
                  <a href="/courses/edit/<%= courses[i]._id %>" class="btn btn-info">
                    Edit
                  </a>
                </td>
              </tr>
            </tbody>
            <% } %>
        </table>

      </div>
    </div>
  </div>

  <% include partials/_footer%>